# Maintainer: hiddeninthesand <hiddeninthesand at pm dot me>

pkgname="pngoptimizer-git"
_gitname="pngoptimizer"
pkgver=1.123.5362cf6
pkgrel=2
pkgdesc="Optimize PNGs and convert other lossless formats to PNG"
arch=('x86_64')
url="https://github.com/hadrien-psydk/pngoptimizer"
license=('GPL')
makedepends=('build-essential' 'libgtk-3-dev')
conflicts=("${_gitname}" "${_gitname}-bin")
source=("git+${url}.git")
sha256sums=('SKIP')

pkgver() {
  cd "$_gitname"

  printf "1.%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
    cd ${srcdir}/${_gitname}
    make -j$(nproc)
}

package() {
    cd ${srcdir}/${_gitname}
    make DESTDIR="${pkgdir}" prefix="/usr" install
}
