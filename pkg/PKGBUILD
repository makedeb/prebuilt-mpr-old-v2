# Maintainer: tuxifreund <kaiser.barbarossa@yandex.com>
pkgname=lariza
pkgver=21.06
pkgrel=1
pkgdesc="Simple WebKit2GTK+ Browser"
arch=('i686' 'x86_64')
url="https://www.uninformativ.de/git/lariza"
license=('MIT')
depends=('build-essential' 'libgtk-3-dev' 'libglib2.0-dev'
    'libwebkit2gtk-4.0-37' 'libwebkit2gtk-4.0-dev')
source=("${url}/archives/${pkgname}-v${pkgver}.tar.gz")
sha256sums=('9faf06a8f4d87b3a63eb3c1e22dcbc7d8361c054357637ae7e870b9212372a13')

build() {
    cd ${pkgname}-v${pkgver}
}

package() {
    cd ${pkgname}-v${pkgver}
    make DESTDIR="${pkgdir}" prefix="/usr" install
}
