# Maintainer: Jan Claussen <jan dot claussen10 at web dot de  >

pkgname=dtc-git
pkgrel=1
pkgver=1.6.1.r43.gc001fc0
pkgdesc='Device Tree Compiler'
arch=(i686 x86_64)
license=(GPL2)
makedepends=(git)
conflicts=(dtc)
replaces=(dtc)
provides=(dtc)
url='http://jdl.com/software/'
source=(git://git.kernel.org/pub/scm/utils/dtc/dtc.git)
md5sums=('SKIP')

pkgver() {
  cd dtc
  git describe --long | sed -r 's/^v//;s/([^-]*-g)/r\1/;s/-/./g'
}

build() {
  cd dtc
  make
}

package() {
  cd dtc
  make DESTDIR="$pkgdir" PREFIX=/usr install
}

