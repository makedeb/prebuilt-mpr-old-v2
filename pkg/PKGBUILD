# Maintainer: hiddeninthesand <hiddeninthesand at protonmail dot com>

pkgname='signal-desktop-bin'
_gitname='signal-desktop'
provides=('signal-desktop')
pkgver='5.42.0'
pkgrel='1'
pkgdesc="Private messaging from your desktop"
arch=('x86_64')
depends=('libnotify4' 'libxtst6' 'libnss3' 'libasound2' 'libxss1' 'libappindicator3-1')
conflicts=('signal-desktop-beta')
license=('AGPL3')
url="https://signal.org"
conflicts=("${_gitname}-git" "${_gitname}" "${_gitname}-beta" "${_gitname}-beta-bin")

source=("https://updates.signal.org/desktop/apt/pool/main/s/signal-desktop/signal-desktop_${pkgver}_amd64.deb")
sha256sums=('c634a3ede29a0d5f160744a23dbe28af128af265766b611688c04aec113c9a05')

package() {
    # Extract data.tar.xz to pkgdir
    msg2 "Extracting data.tar.xz..."
    tar -xf 'data.tar.xz' -C "${pkgdir}"
}
