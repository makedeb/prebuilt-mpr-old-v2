# Contributor: Chrysalis <mindaxis@gmail.com>

pkgname=mprime-bin
pkgver=307b9
pkgrel=1
pkgdesc="A GIMPS, distributed computing project client, dedicated to finding Mersenne primes. Precompiled binary version."
arch=('x86_64')
url="http://www.mersenne.org"
license=('custom')
provides=('mprime')
conflicts=('mprime')
depends=('libgcc-10-dev')
source=("ftp://mersenne.org/gimps/p95v$pkgver.linux64.tar.gz")
sha256sums=('d47d766c734d1cca4521cf7b37c1fe351c2cf1fbe5b7c70c457061a897a5a380')

package() {
	install -Dm755 mprime ${pkgdir}/usr/bin/mprime
	install -Dm644 license.txt ${pkgdir}/usr/share/licenses/mprime/license.txt
	install -Dm644 readme.txt ${pkgdir}/usr/share/doc/mprime/readme.txt
	install -Dm644 stress.txt ${pkgdir}/usr/share/doc/mprime/stress.txt
	install -Dm644 undoc.txt ${pkgdir}/usr/share/doc/mprime/undoc.txt
	install -Dm644 whatsnew.txt ${pkgdir}/usr/share/doc/mprime/whatsnew.txt
}

