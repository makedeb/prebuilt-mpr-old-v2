# Maintainer: Leo Puvilland <lpuvilla0001@mymail.lausd.net>

_pkgname=libgeneral
pkgname=$_pkgname-git
pkgver=1.56.e0d98cb
pkgrel=1
pkgdesc="General stuff for tihmstar's projects - git version"
arch=('x86_64')
url="https://github.com/tihmstar/$_pkgname"
license=('LGPL')
makedepends=('git' 'gettext' 'libevent-pthreads-2.1-7')
provides=('libgeneral')
conflicts=('libgeneral')
source=("git+$url.git")
sha256sums=('SKIP')

pkgver() {
  cd "$_pkgname"

  printf "1.%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$_pkgname"

  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd "$_pkgname"

  make DESTDIR="$pkgdir/" install
}
