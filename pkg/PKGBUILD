# Maintainer: keitachikawa
pkgname=bitwise-git
# version . commit
pkgver=0.40.r27.gf8d5ade
pkgrel=1
epoch=
pkgdesc="Terminal based bit manipulator in ncurses"
arch=('i686' 'x86_64')
url="https://github.com/mellowcandle/bitwise"
license=('GPL3')
depends=(ncurses-base ncurses-bin ncurses-doc readline-common )
makedepends=('git' 'libreadline-dev' 'libcunit1-dev' 'libncurses5-dev' 'build-essential')
conflicts=("${pkgname%-*}")
replaces=("${pkgname%-*}")
source=("$pkgname::git+$url")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g;s/^v//'
}

build() {
  cd "$srcdir/$pkgname"
  ./bootstrap.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir/" install
  install -D -m644 README.md $pkgdir/usr/share/doc/${pkgname%-*}/README.md
  install -D -m644 LICENSE $pkgdir/usr/share/licenses/${pkgname%-*}/LICENSE
}
