pkgname=xpenguins
pkgver=3.2.1
pkgrel=1
pkgdesc="Ever wanted cute little penguins walking along the tops of your windows?"
depends=('libxpm4' 'libgtk-3-0' 'libgtk-3-bin')
source=(http://downloads.sf.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz)
license=('GPL2')
arch=('i686' 'x86_64' 'aarch64')

url="https://www.ratrabbit.nl/ratrabbit/software/xpenguins/index.html"
sha256sums=('b5a961684c461409527fef2cf266d8ae3823bd7a9cf79e678fa205e1de611c0f')

prepare() {
    cd $srcdir/$pkgname-$pkgver
    # some very very important patches
    
    # patch for MORE LIFFFFFFT
    sed -i -e 's|<property name="upper">150</property>|<property name="upper">1080</property>|g' src/ui.xml
    
    # patch for MORE SPEEEEED
    sed -i -e 's/MaxSpeedFactor = 4.0;/MaxSpeedFactor = 10.0;/g' src/ui.c
    
    # patch for MOOOAAAR PENGUINS, we want ALL of them
    sed -i -e 's/MaxNPenguins = 200;/MaxNPenguins = 10000;/g' src/ui.c
}

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --mandir=/usr/share/man
  make -j$(nproc)
}

package()
{
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
